{
  "compilerOptions": {
    "strict": true,
    // project options
    "allowJs": true,
    "checkJs": true,
    "target": "ES2019",
    "noEmitOnError": true,
    "incremental": true,
    "composite": true,
    "isolatedModules": true,
    "removeComments": false,
    // module resolution
    "esModuleInterop": true,
    "moduleResolution": "node",
    // linter checks
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    // advanced
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
